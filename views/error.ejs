<%- include('layout', {
    title: typeof title !== 'undefined' ? title : 'Error',
    body: `
    <!-- Error Section -->
    <section class="error-section">
        <div class="container">
            <div class="error-content text-center">
                <div class="error-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <h1 class="error-title">${typeof title !== 'undefined' ? title : 'Error'}</h1>
                <p class="error-message">${typeof message !== 'undefined' ? message : 'Something went wrong. Please try again later.'}</p>
                <a href="/" class="btn btn-primary">Go to Homepage</a>
            </div>
        </div>
    </section>
    `
}) %>
